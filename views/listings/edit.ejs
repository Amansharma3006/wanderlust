<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
          <div class="col-8 offset-2">
            <br><br>
            <h1>Edit your listing</h1>
            <br><br>
            <form  id="my_form" method="post" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Listing Title</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                    <div class="valid-feedback">Nice title!</div>
                    <div class="invalid-feedback">Write a proper title</div>
                </div>
              <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Write a proper description</div>
              </div>
              <div class="mb-3">
                <label for="image" class="form-label"> Listing Image </label>
                <img src="<%=originalUrl%>" name="image" alt="not available">
              </div>
               <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="file" name="listing[image]" value="<%=listing.image.url%>" class="form-control">
                    <div class="invalid-feedback">Enter a valid link</div>
               </div>
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                   <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                   <div class="invalid-feedback">enter a valid price</div>
                 </div>
                 <div class="mb-3 col-md-8">
                     <label for="location" class="form-label">Location</label>
                     <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
                     <div class="invalid-feedback">enter a valid country</div>
                 </div>
               </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                    <div class="invalid-feedback">enter a valid location</div>
                </div>
                
                <button class="btn btn-dark add-btn">Edit</button>
                <br><br><br>
            </form>
          </div>
    </div>    
</body>
