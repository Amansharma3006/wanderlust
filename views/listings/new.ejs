<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">  
        <div class="col-8 offset-2">
            <br><br><br>
            <h1>Add New Listing</h1>
   
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title here" class="form-control" required>
                    <div class="valid-feedback">Nice title!</div>
                    <div class="invalid-feedback">Write a proper title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description here" class="form-control" required></textarea>
                    <div class="invalid-feedback">Write a proper description</div>
                </div>
                <div class="mb-3">
                    <label for="listing[image]" class="form-label">Upload Image/File</label>
                    <input type="file" name="listing[image]" class="form-control" required>
                    <div class="invalid-feedback">Enter a valid link</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="listing[price]" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Enter price here" class="form-control" required>
                        <div class="invalid-feedback">enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="listing[country]" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter country here" class="form-control" required>
                        <div class="invalid-feedback">enter a valid country</div>
            
                    </div>

                </div>
                
                <div class="mb-3">
                    <label for="listing[location]" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter location here" class="form-control"required>
                    <div class="invalid-feedback">enter a valid location</div>
                </div>
                
                <button class="btn btn-dark add-btn">Add</button>
                <br><br><br>
            </form>
        </div>  
    
    </div>    

</body>